rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura pública de la configuración (para verificar contraseña de admin)
    match /settings/config {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir lectura pública de registros de asistencia (para el panel admin)
    // Permitiendo escritura si está autenticado (cuando el empleado guarda su marca)
    match /attendance/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Resto de documentos requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
